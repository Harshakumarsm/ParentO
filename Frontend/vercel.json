{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://parento-dcgi.onrender.com/api/$1"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "https://parento-dcgi.onrender.com/socket.io/$1"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/assets/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "^/favicon.(ico|png)$",
      "dest": "/favicon.$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
